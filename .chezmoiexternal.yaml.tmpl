".local/share/oh-my-zsh":
  type: "git-repo"
  url: "https://github.com/ohmyzsh/ohmyzsh"
  refreshPeriod: "168h"
  pull:
    args: ["--ff-only"]

{{   end -}}
{{   if ne .osFamily "linux-arch" -}}
