#[[ -f ~/.bashrc ]] && . ~/.bashrc ## Original Manjaro simple is-file check

# Always source .profile for ENV vars
[ -r ~/.profile ] && . ~/.profile
# If interactive shell & readable, include .bashrc
[[ "$-" == *i* ]] && [ -r ~/.bashrc ] && . ~/.bashrc


