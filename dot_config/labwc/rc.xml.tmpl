<?xml version="1.0" ?>
<labwc_config>
  <focus>
    <followMouse>yes</followMouse>
  </focus>
  <keyboard>
    <default />
    <!-- The W- prefix refers to the Super key, and the S refers to Shift key -->
    <keybind key="W-S-q">
      <action name="Close" />
    </keybind>
    <keybind key="W-S-c">
      <action name="Reconfigure" />
    </keybind>
{{- if lookPath "rofi" }}
    <keybind key="W-d">
      <action name="Execute" command="rofi -show combi -combi-modi 'drun,run' -terminal 'footclient' -ssh-command '{terminal} {ssh-client} {host} [-p {port}]' -run-shell-command '{terminal} {cmd}' -show-icons -font 'Nunito Sans Light 12' -lines 10" />
    </keybind>
{{- end }}
{{- if lookPath "footclient" }}
    <keybind key="W-Return">
      <action name="Execute" command="footclient" />
    </keybind>
    <keybind key="C-A-t">
      <action name="Execute" command="footclient" />
    </keybind>
{{- end }}
{{- if lookPath "rofi-lpass" | and (lookPath "rofi" | or (lookPath "wofi")) }}
    <keybind key="W-S-g">
      <action name="Execute" command="rofi -combi  -modi lpass:rofi-lpass -show lpass -normal-window -no-steal-focus" />
    </keybind>
{{- end }}
  </keyboard>
</labwc_config>
